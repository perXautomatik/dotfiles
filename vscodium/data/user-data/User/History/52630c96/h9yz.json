{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "listModds",
            "type": "shell",
            // Use curly braces to create a script block
            "command": "& { $modsPath = Read-Host -Prompt 'Enter the path of the mods folder' $modFolders = Get-ChildItem -Path $modsPath -Directory foreach ($modFolder in $modFolders) { $modJsonPath = Join-Path -Path $modFolder.FullName -ChildPath 'mod.json' if (Test-Path -Path $modJsonPath) { $modJson = Get-Content -Path $modJsonPath -Raw | ConvertFrom-Json if ($modJson.name -ne $modFolder.Name) { Rename-Item -Path $modFolder.FullName -NewName $modJson.name Write-Host "Renamed $($modFolder.Name) to $($modJson.name)" } if ([string]::IsNullOrEmpty($modJson.description)) { $modJson.description = "This is a mod for d2rmmm. Please edit this description to provide more details." $modJson | ConvertTo-Json | Set-Content -Path $modJsonPath Write-Host "Updated description for $($modJson.name)" } } else { Write-Warning "No mod.json file found in $($modFolder.Name)" } }}",
            // Add a comma after each field except for the last one
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Compare Files",
            "type": "shell",
            "command": "${workspaceFolder}/compare-files.ps1",
            "args": [
                "${input:file1}",
                "${input:file2}"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
            
        }
    ]
}
