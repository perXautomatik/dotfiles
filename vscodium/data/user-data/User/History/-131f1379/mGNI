# Use the .NET 6.0 SDK image as the base
FROM mcr.microsoft.com/dotnet/sdk:6.0

# Copy the source code to the container
COPY . /app

# Set the working directory to the app folder
WORKDIR /app

# Restore the packages and build the app
RUN dotnet restore
RUN dotnet publish -c Release -o out

# Use the .NET 6.0 runtime image as the base for the final image
FROM mcr.microsoft.com/dotnet/runtime:6.0

# Copy the published app from the previous image
COPY --from=0 /app/out .

EXPOSE 3001

# Start the app using serve command
CMD [ "serve", "-s", "build" ]

# Set the entrypoint to run the app
#ENTRYPOINT ["dotnet", "WpfApp.dll"]